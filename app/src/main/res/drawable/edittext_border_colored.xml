    android:padding="10dp"
    android:shape="rectangle">
    <solid android:color="#FFFFFFFF" />
    <gradient
        android:angle="360"
        android:centerColor="#00BCD4"
        android:endColor="#3F51B5"
        android:startColor="#808080"
